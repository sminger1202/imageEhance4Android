<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hello_jni"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hellojni.EnhanceActivity">

    <com.example.hellojni.VideoPreviewView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/playview"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:clickable="true"
        tools:context="com.muneikh.ui.CameraActivity" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/playview"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/playbotton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="播放"/>

        <Button
            android:id="@+id/toggle"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="切换"/>
        <Button
            android:id="@+id/toggleCL"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="CL"/>


    </android.support.v7.widget.LinearLayoutCompat>


</RelativeLayout>
